generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

generator pothos {
  provider = "prisma-pothos-types"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_PRISMA_URL")
  directUrl = env("DATABASE_URL_NON_POOLING")
}

model Bookmark {
  id              String   @id @default(uuid())
  url             String
  friendlyName    String   @db.VarChar(255)
  description     String?  @db.VarChar(255)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  userId          String
  bookmarkGroupId String

  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookmarkGroup BookmarkGroup @relation(fields: [bookmarkGroupId], references: [id], onDelete: Cascade)
}

model BookmarkGroup {
  id          String     @id @default(uuid())
  name        String
  description String?    @db.VarChar(255)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  bookmarks   Bookmark[]
  userId      String
  parentId    String?
  depth       Int        @default(0)

  children BookmarkGroup[] @relation("BookmarkGroupsToBookmarkGroups")
  parent   BookmarkGroup?  @relation("BookmarkGroupsToBookmarkGroups", fields: [parentId], references: [id], onDelete: Cascade)
  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id             String          @id @default(uuid())
  email          String          @unique
  password       String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  confirmed      Boolean         @default(false)
  bookmarkGroups BookmarkGroup[]
  bookmarks      Bookmark[]
  googleUser     GoogleUser?
}

model GoogleUser {
  id            String   @id @default(uuid())
  email         String   @unique
  name          String?
  picture       String
  givenName     String?
  familyName    String?
  locale        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  userId        String   @unique
  googleTokenId String   @unique

  googleToken GoogleToken @relation(fields: [googleTokenId], references: [id], onDelete: Cascade)
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model GoogleToken {
  id         String      @id @default(uuid())
  data       String
  iv         String
  googleUser GoogleUser?
}
